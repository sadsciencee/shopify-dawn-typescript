	width: 100%;
}

.media > img {
	object-fit: cover;
	object-position: center center;
}

// hide drawers on initial load
.menu-drawer,
.cart-notification,
.quick-add-modal,
.product-media-modal,
.slide-drawer__content {
	visibility: hidden;
}
